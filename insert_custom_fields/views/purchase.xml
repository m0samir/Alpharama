<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form_view_inherit" model="ir.ui.view">
		<field name="name">purchase.order.form.inherit</field>
		<field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
			<data>
				<xpath expr="//field[@name='date_approve']" position="after">
                    <field name="expected_arrival"/>
				</xpath>
			</data>
		</field>            
    </record>
    
    <record id="view_picking_form_view_inherit" model="ir.ui.view">
		<field name="name">stock.picking.form.inherit</field>
		<field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
			<data>
				<xpath expr="//field[@name='origin']" position="before">
                    <field name="expected_arrival" attrs="{'invisible': [('picking_type_code', '=', 'outgoing')]}"/>
				</xpath>
			</data>
		</field>            
    </record>
 </odoo>

