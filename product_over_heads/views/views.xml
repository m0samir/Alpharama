<odoo>
    <data>

    <record model="ir.ui.view" id="overheads_details_list">
          <field name="name">product.overheads.list</field>
          <field name="model">product.overheads</field>
          <field name="arch" type="xml">
            <tree>
                <field name="from_date"/>
                <field name="to_date"/>
                <field name="total_amount"/>
                <field name="total_per_sft"/>
            </tree>
          </field>
        </record>

        <record model="ir.ui.view" id="overheads_details_form">
          <field name="name">product.overheads.form</field>
          <field name="model">product.overheads</field>
          <field name="arch" type="xml">
          <form>
            <sheet>
              <group>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="total_amount"/>
                    <field name="total_per_sft"/>
                </group>

              <notebook>
              <page string="Overheads Details">
                  <field name="product_oh_line_ids">
                      <tree editable="bottom">
                          <field name="overhead_id"/>
                          <field name="amount"/>
                          <field name="per_sft"/>
                      </tree>

                      <form>
                      <group>
                          <field name="overhead_id"/>
                          <field name="amount"/>
                          <field name="per_sft"/>
                      </group>
                      </form>
                </field>
              </page>
              </notebook>
            </sheet>

            <div class="oe_chatter">
                 <field name="message_follower_ids" widget="mail_followers"/>
                 <field name="message_ids" widget="mail_thread"/>
            </div>
          </form>
          </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="overheads_details_action_window">
          <field name="name">Product Overheads</field>
          <field name="res_model">product.overheads</field>
          <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="overheads_details_menu" parent="mrp.menu_mrp_configuration" action="overheads_details_action_window"/>

    </data>
</odoo>
