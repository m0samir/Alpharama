<odoo>
    <data>

        <record id="inherited_view_hr_payslip_form_form" model="ir.ui.view">
        <field name="name">hr.piece.rate.extended</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form" />
        <field name="arch" type="xml">

            <xpath expr="//page[1]/field[@name='worked_days_line_ids']" position="after">

                <separator string="Piece Rate Inputs"/>
                <field name="Piece_rate_line_ids" colspan="4" nolabel="1">
                    <tree string="Input Data" editable="bottom">
                        <field name="mo_name"/>
                        <field name="work_name"/>
                        <field name="number_days"/>
                        <field name="total_amount_pe"/>
                        <field name="delay_deduction_percent"/>
                        <field name="delay_deduction_amount"/>
                        <field name="casual_employees" widget="many2many_tags"/>
                        <field name="casual_deduction_amount"/>
                        <field name="total_amount"/>
                    </tree>
                    <form string="Payslip Line">
                        <group col="4">
                        <field name="mo_name"/>
                        <field name="work_name"/>
                        <field name="number_days"/>
                        <field name="total_amount_pe"/>
                        <field name="delay_deduction_percent"/>
                        <field name="delay_deduction_amount"/>
                        <field name="total_amount"/>
                        </group>
                    </form>
                </field>

            </xpath>

        </field>
        </record>

    </data>
</odoo>
